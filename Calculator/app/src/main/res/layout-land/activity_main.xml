<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/io_background"
        android:gravity="bottom"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/input"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="end"
            android:textColor="#393e41"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/output"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="500-3" />

        <TextView
            android:id="@+id/output"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/orange"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.74"
            tools:text="497" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TableRow>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sevenBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/eightBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nineBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/divisionBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="รท"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sinBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="sin"
                android:textAllCaps="false"
                android:textSize="15sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clearBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="C"
                android:textColor="@color/red"
                android:textSize="15sp" />


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/backSpaceBTN"
                style="@style/Button_Style_land"
                android:layout_width="135dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_backspace_24" />


        </TableRow>


        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fourBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fiveBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sixBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiplicationBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ร"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tanBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="tan"
                android:textAllCaps="false"
                android:textSize="15sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/openSquareBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="["
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/closeSquareBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="]"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/commaBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=","
                android:textSize="15sp" />

        </TableRow>

        <TableRow>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/oneBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/twoBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/threeBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="15sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/substractionBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cosBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="cos"
                android:textAllCaps="false"
                android:textSize="15sp"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/openBracketBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="("
                android:textSize="15sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/closedBracketBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=")"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/timerBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Timer"
                android:textAllCaps="false"
                android:textSize="15sp" />



        </TableRow>



        <TableRow>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/powerBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="^"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zeroBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/decimalBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="15sp" />




            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/additionBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="log"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/historyBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/histroy"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/equalstoBTN"
                style="@style/Button_Style_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/orange"
                android:text="="
                android:textSize="15sp" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

